//sum of the elements in thwe array
#include<stdio.h>
  int main () 
  { 
     int n;
     int i,arr[i]; 
       printf ("Enter the number of elementes in the array:");
        scanf("%d",&n); 
          int sum =0;
          for(i=0;i<n;i++)
           {
                printf("enter arr[%d]",i);
               scanf("%d",&arr[i]);
               sum =sum+arr[i];
           }
           printf("%d",sum );
     return 0;
  }
**********************************************************************
output
   Enter the number of elementes in the array:6
   enter arr[0]8
   enter arr[1]9
   enter arr[2]3
   enter arr[3]5
   enter arr[4]9
   enter arr[5]0
     34
**********************************************************************
//saperate odd or even integeras in saperate array 
#include <stdio.h>
   int  main()
  { 
    int n,i,arr[i];
    printf("get n:"); 
    scanf("%d",&n);
          for (i=0;i<n;i++) 
          {   
               printf("enter arr[%d]:",i);
               scanf("%d",&arr[i]); 
           } printf("\nThe even numbers :");
              for (i=0;i<=n;i++)
                 { 
                     if (arr[i]%2==0) 
                       {
                           int even;
                             arr[even]=arr[i];
                              printf("%d   ",arr[even]);
                       } 
                       
                  }
                  printf("\nThe odd numbers:");
                  for (i=0;i<=n;i++)
                 { 
                     if (arr[i]%2!=0) 
                       {
                           int odd;
                             arr[odd]=arr[i];
                              printf("%d  ",arr[odd]);
                       } 
                       
                  }
     return 0;
  }
**********************************************************************
output:
     get n:5
     enter arr[0]:2
     enter arr[1]:3
     enter arr[2]:4
     enter arr[3]:5
     enter arr[4]:6

     The even numbers :2   4   6 
     The odd numbers:3  5

**********************************************************************
//write the c program to calculate  the sum of the elements in the array 
#include <stdio.h>
  void main ()
{
int i,c=0,n,a[i];
   printf("enter the number of elements in the arrey :");
   scanf("%d",&n);
     for (i=0;i<n;i++)
     {
        printf("\n enter the value of a[%d]:",i);
         scanf("%d",&a[i]);
         c=c+a[i];
      }  
        printf("\n sum of the arrey is :%d ",c);
  }
 **********************************************************************
