//5*5 pattern code
#include<stdio.h>
  
      int main()
  {
       
     for (int row=1;row<=5;row++)
     {
            for (int col=1;col<=5;col++)
        {
         printf("*");
     
     }
           printf("\n");
  }
  return 0;
}
