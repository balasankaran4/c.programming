//low

// sum of the natural numbers
#include<stdio.h>
 void main ()
 {
   int n,sum=0;
      printf ("Enter the number:");
      scanf("%d",&n);
       for (int i=1;i<=n;i++)
       {
         sum=sum+i;
       }
      printf("\nSum of the natural number is %d",sum);
}
