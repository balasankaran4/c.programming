//high
 // Index of the given char
#include<stdio.h>
int  main ()
{
char str[50],ch;
printf("ebnte ch");
scanf(" %c",&ch);
printf("Enter the string without space ");
scanf("%s",str);
int i=0;
while(str[i]!='\0')
{
    if(str[i]==ch)
    {
        printf("\nthe index is %d",i);
        break;
    }
    else
     i++;
}
    return 0;
 }

