//medium
//convert a string to uppercase
#include <stdio.h>
int main() 
{
    char low[100],up[100]; 
    int i=0,j=0;
    printf("Enter string in lowercase:"); 
    scanf("%s",low); 
    while (low[i]!='\0')
    {
        up[j]=low[i]-32; 
        i++,j++; 
        
    } 
    printf("\n The given string :%s",low);
    printf("\nThe converted string:%s",up); 
    return 0; 
}

